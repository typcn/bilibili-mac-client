{
    "manifest_version": 2,
    "name": "Bilibili Mac Client Helper",
    "description": "Chrome Helper for Bilibili Mac Client",
    "version": "1.3",
    "permissions": [
        "storage",
        "tabs",
        "http://*/*",
        "notifications"
    ],
    "icons": { 
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png" 
    },
    "browser_action": {
        "default_icon": {                    
            "19": "img/icon48.png",          
            "38": "img/icon48.png"          
        },
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["js/background.js"]
    },
    "content_scripts": [
        {
            "matches": ["http://*/*"],
            "js": ["js/inject.js"]
        }
    ],
    "content_security_policy": "script-src 'self' blob: filesystem: chrome-extension-resource: http://localhost:23330 https://www.google-analytics.com; object-src 'self'",
    "web_accessible_resources": [
        "img/icon128.png"
    ]
}